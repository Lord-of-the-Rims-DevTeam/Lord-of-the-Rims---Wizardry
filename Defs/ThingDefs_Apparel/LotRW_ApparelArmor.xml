<?xml version="1.0" encoding="utf-8" ?>
<Defs>


  <ThingDef ParentName="LotRW_ApparelMakeableBase">
    <defName>LotRW_Apparel_Cape</defName>
    <label>wizard cape</label>
    <description>A fashionable cape that seems to fold just right.</description>
    <graphicData>
      <texPath>Things/Pawn/Istari/Apparel/nackbladLOTR_GandalfCape</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>50</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>120</MaxHitPoints>
      <WorkToMake>12000</WorkToMake>
      <Mass>1.2</Mass>
      <ArmorRating_Sharp>0.03</ArmorRating_Sharp>
      <ArmorRating_Heat>0.03</ArmorRating_Heat>
      <Insulation_Cold>-16</Insulation_Cold>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.01</MoveSpeed>
    </equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Shoulders</li>
        <li>Arms</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Pawn/Istari/Apparel/nackbladLOTR_GandalfCape</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>LotRW_Wizard</li>
      </tags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
		<li>
		  <!-- Grey -->
		  <weight>5</weight>
		  <only>RGBA(0.75,0.75,0.75,1)</only>
		</li>
		<li>
		  <!-- White -->
		  <weight>0.3</weight>
		  <only>RGBA(1,1,1,1)</only>
		</li>
        <li>
		  <!-- Forest Green -->
          <weight>10</weight>
          <only>RGBA(0.42,0.51,0.4,1)</only>
        </li>
        <li>
		  <!-- Dark Brown -->
          <weight>10</weight>
          <only>RGBA(0.42,0.27,0.2,1)</only>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

