<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  
  <HediffDef>
    <defName>LotRW_Blindness</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1, 1, 1)</defaultLabelColor>
    <label>Blindness</label>
    <lethalSeverity>20</lethalSeverity>
	<isBad>true</isBad>
	<makesSickThought>false</makesSickThought>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-50</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>I</label>
        <minSeverity>1</minSeverity>
        <capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>-0.3</offset>
          </li>
        </capMods>
      </li>
      <li>
        <label>II</label>
        <minSeverity>3</minSeverity>	
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.5</offset>
          </li>
        </capMods>
      </li>
	  <li>
        <label>III</label>
        <minSeverity>6</minSeverity>	
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.75</offset>
          </li>
        </capMods>
		<statOffsets>
		  <AimingDelayFactor>+0.10</AimingDelayFactor>
	    </statOffsets>
      </li>
	  <li>
        <label>IV</label>
        <minSeverity>10</minSeverity>	
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.9</offset>
          </li>
        </capMods>
		<statOffsets>
		  <AimingDelayFactor>+0.20</AimingDelayFactor>
	    </statOffsets>
      </li>
	  <li>
        <label>V</label>
        <minSeverity>15</minSeverity>	
        <capMods>
		  <li>
            <capacity>Sight</capacity>
            <offset>-1</offset>
          </li>
        </capMods>
		<statOffsets>
		  <AimingDelayFactor>+0.40</AimingDelayFactor>
	    </statOffsets>
      </li>
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>LotRW_Quake</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(1, 1, 1)</defaultLabelColor>
    <label>Earthquake</label>
	<isBad>true</isBad>
	<makesSickThought>false</makesSickThought>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-100</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>I</label>
        <minSeverity>0.001</minSeverity>
		<becomeVisible>false</becomeVisible>
        <capMods>
		  <li>
            <capacity>Moving</capacity>
            <setMax>0.5</setMax>
          </li>
        </capMods>
      </li>
      <li>
        <label>II</label>
        <minSeverity>1</minSeverity>	
		<becomeVisible>false</becomeVisible>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.2</setMax>
          </li>
        </capMods>
      </li>
	  <li>
        <label>III</label>
        <minSeverity>3</minSeverity>	
        <becomeVisible>false</becomeVisible>
        <capMods>
          <li>
            <capacity>Moving</capacity>
            <setMax>0.05</setMax>
          </li>
        </capMods>
      </li>	  
    </stages>
  </HediffDef>  
  
  <HediffDef>
    <defName>LotRW_HauntedHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <defaultLabelColor>(0.8, 0.8, .8)</defaultLabelColor>
    <label>Haunted</label>
	<isBad>true</isBad>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-50</severityPerDay>
      </li>
    </comps>
    <stages>
      <li>
        <label>Haunted</label>
        <minSeverity>0.1</minSeverity>
		<becomeVisible>false</becomeVisible>
		<mentalStateGivers>
			<li>
			 <mentalState>PanicFlee</mentalState>
			 <mtbDays>0.03</mtbDays>
			</li>
			<li>
			  <mentalState>Berserk</mentalState>
			  <mtbDays>0.06</mtbDays>
			</li>
		</mentalStateGivers>
        <capMods>
          <li>
            <capacity>Sight</capacity>
            <offset>-0.3</offset>
          </li>
          <li>
            <capacity>Consciousness</capacity>
            <offset>-0.1</offset>
          </li>
        </capMods>
      </li>      
    </stages>
  </HediffDef>
  
  <HediffDef>
    <defName>LotRW_DarknessHD</defName>
	<hediffClass>HediffWithComps</hediffClass>
	<label>Darkness</label>
    <defaultLabelColor>(0.8,0.8,0.8)</defaultLabelColor>
    <scenarioCanAdd>false</scenarioCanAdd>
	<makesSickThought>false</makesSickThought>
	<tendable>false</tendable>
    <makesAlert>false</makesAlert>
	<maxSeverity>3.0</maxSeverity>
	<isBad>true</isBad>
	<initialSeverity>1</initialSeverity>
	<comps>
      <li Class="HediffCompProperties_SeverityPerDay">
        <severityPerDay>-200</severityPerDay>
      </li>
    </comps>
	<stages>
      <li>
        <label></label>
        <minSeverity>0.001</minSeverity>
		<becomeVisible>true</becomeVisible>
		<capMods>
		  <li>
			  <capacity>Sight</capacity>
			  <setMax>0.5</setMax>
		  </li> 
		</capMods>
      </li>
	  <li>
        <label></label>
        <minSeverity>2</minSeverity>
		<becomeVisible>true</becomeVisible>
		<capMods>
		  <li>
			  <capacity>Sight</capacity>
			  <setMax>0.3</setMax>
		  </li> 
		</capMods>
      </li>
	</stages>
  </HediffDef>
  
</Defs>
