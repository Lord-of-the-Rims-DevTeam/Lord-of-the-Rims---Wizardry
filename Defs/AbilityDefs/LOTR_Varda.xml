  <Wizardry.WizardAbilityDef ParentName="BaseWizardAbility">
    <defName>LOTR_Varda_FocusFlames</defName>
    <label>fanning flames</label>
    <uiIconPath>UI/defaultUI</uiIconPath>
    <description>Gives purpose and direction to a flame.</description>
    <MainVerb Class="AbilityUser.VerbProperties_Ability">
      <verbClass>AbilityUser.Verb_UseAbility</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <defaultProjectile>Projectile_FocusFlames</defaultProjectile>
      <abilityDef>LOTR_Varda_FocusFlames</abilityDef>
      <isViolent>true</isViolent>
      <warmupTime>.2</warmupTime>
      <SecondsToRecharge>5.0</SecondsToRecharge>
      <range>50</range>
      <burstShotCount>1</burstShotCount>
      <ticksBetweenBurstShots>1</ticksBetweenBurstShots>
      <soundCast>ExpandingFlames</soundCast>
      <muzzleFlashScale>20</muzzleFlashScale>
      <isPrimary>false</isPrimary>
<!--       <AbilityTargetCategory>TargetLocation</AbilityTargetCategory> -->
      <targetParams>
        <canTargetPawns>true</canTargetPawns>
        <canTargetBuildings>true</canTargetBuildings>
        <canTargetItems>true</canTargetItems>
        <canTargetSelf>false</canTargetSelf>
		<canTargetLocations>true</canTargetLocations>
      </targetParams>
      <tooltipShowProjectileDamage>false</tooltipShowProjectileDamage>
      <tooltipShowExtraDamages>false</tooltipShowExtraDamages>
      <tooltipShowHediffsToApply>false</tooltipShowHediffsToApply>
      <tooltipShowMentalStatesToApply>false</tooltipShowMentalStatesToApply>
    </MainVerb>
  </Wizardry.WizardAbilityDef>
  
  
