            <damageDef>Stun</damageDef>
            <damageAmountBase>30</damageAmountBase>
            <speed>20</speed>
			<explosionRadius>3</explosionRadius>
			<postExplosionSpawnChance>1</postExplosionSpawnChance>
        </projectile>
    </ThingDef>
  
